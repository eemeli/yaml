{
  "compilerOptions": {
    "declaration": true,
    "erasableSyntaxOnly": true,
    "isolatedModules": true,
    "module": "node20",
    "moduleDetection": "force",
    "moduleResolution": "nodenext",
    "noUncheckedSideEffectImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "rewriteRelativeImportExtensions": true,
    "rootDir": "src",
    "strict": true,
    "target": "es2023",
    "types": ["node"]
  },
  "include": ["src/**/*.ts"]
}
